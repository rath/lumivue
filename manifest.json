{
  "manifest_version": 3,
  "name": "LumiVue",
  "version": "1.0",
  "description": "Summarize or translate selected text or entire pages using AI",
  "author": "Jang-Ho Hwang <rath@told.me>",
  "homepage_url": "https://github.com/rath/lumivue",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["popup.css"]
    }
  ],
  "options_page": "options.html",
  "commands": {
    "trigger-lumivue": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Trigger LumiVue action (Summarize/Translate)"
    }
  },
  "action": {
    "default_title": "LumiVue Settings",
    "default_popup": "options.html"
  },
  "host_permissions": [
    "https://api.groq.com/"
  ]
}
